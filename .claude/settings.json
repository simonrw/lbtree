{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/session-start.sh",
            "description": "Install and start LocalStack on session start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/session-end.sh",
            "description": "Stop LocalStack on session end"
          }
        ]
      }
    ]
  }
}
